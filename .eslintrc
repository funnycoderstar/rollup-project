{
    "extends": [
        "eslint:recommended"
    ],
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "env": {
        "browser": true,
        "mocha": true,
        "es6": true,
        "node": true
    },
    "globals": {
        "lib": true
    },
    "rules": {
        "import/first": "warn",
        "no-var": "warn",
        "indent": [
            "error",
            4,
            {
                "SwitchCase": 1
            }
        ],
        "max-len": 0,
        "no-continue": 0,
        "no-plusplus": 0,
        "comma-dangle": ["error", "always-multiline"],
        "spaced-comment": "error",
        "object-shorthand": "warn",
        "array-bracket-spacing": 0,
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "padded-blocks": 0,
        "class-methods-use-this": 0,
        "no-mixed-operators": 0,
        "no-bitwise": 0,
        "no-console": 0
    }
}
